.breadcrumb {
  svg {
    display: none;
  }
  counter-reset: my-badass-counter;
  display: block;
  justify-content: space-between;
  overflow: hidden;
  position: relative;
  margin-bottom: 0;
  text-align: justify;
  .breadcrumb__item:before {
    content: counter(my-badass-counter);
    counter-increment: my-badass-counter;
    display: block;
    width: 28px;
    height: 28px;
    line-height: 28px;
    text-align: center;
    border: solid 1px $color-light-gray;
    margin: auto;
    margin-bottom: 10px;
    font-size: 12px;
    font-family: 'Brandon Grotesque', sans-serif;
    color: $color-gray;
    position: relative;
    background: $color-white;
    z-index: 5;
    border-radius: 15px;
  }
  &:before {
    content: '';
    height: 0px;
    display: block;
    width: 100%;
    position: absolute;
    top: 14px;
    left: 0;
    z-index: 1;
    border-top: solid $color-light-gray 1px;
  }
  &:after {
    content: '';
    width: 100%;
    display: inline-block;  
  }
  .breadcrumb__item {
    &:first-child:after {
      content: '';
      height: 0px;
      display: block;
      width: 400%;
      position: absolute;
      top: 14px;
      right: 50%;
      margin-right: 15px;
      z-index: 3;
      margin-top: -2px;
      border-top: solid $color-white 5px;
    }
    &:last-child:after {
      content: '';
      height: 0px;
      display: block;
      width: 400%;
      position: absolute;
      top: 14px;
      left: 50%;
      margin-right: 15px;
      z-index: 3;
      margin-top: -2px;
      border-top: solid $color-white 5px;
    }
    display: inline-block;
    vertical-align: top;
    min-width: 30px;
    text-align: center;
    position: relative;
    color: $color-light-gray;
    a {
      color: $color-light-gray2;
    }
    &.breadcrumb__item--current {
      &:before {
        border: solid $color-gray 1px;
        color: $color-black;
        border-radius: 15px;
      }
      color: $color-black;
    }
    @media only screen and (max-width: 749px) {
      max-width: 80px;

    }
  }
}

